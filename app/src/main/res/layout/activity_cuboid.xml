<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cuboid"
    android:background="@drawable/cuboidbackpixel">

    <EditText
        android:id="@+id/panjang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="236dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/border"
        android:hint="Panjang"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:inputType="number"
        android:paddingStart="10dp"
        android:paddingTop="15dp"
        android:paddingEnd="20dp"
        android:paddingBottom="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/lebar"
        android:layout_width="match_parent"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginTop="252dp"
        android:background="@drawable/border"
        android:hint="Lebar"
        android:textColorHint="@color/white"
        android:inputType="number"
        android:paddingStart="15dp"
        android:paddingTop="15dp"
        android:paddingEnd="15dp"
        android:paddingBottom="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/panjang"  />

    <EditText
        android:id="@+id/tinggi"
        android:layout_width="match_parent"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginTop="252dp"
        android:background="@drawable/border"
        android:hint="Tinggi"
        android:textColorHint="@color/white"
        android:inputType="number"
        android:paddingStart="15dp"
        android:paddingTop="15dp"
        android:paddingEnd="15dp"
        android:paddingBottom="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lebar"  />

    <ImageView
        android:id="@+id/hitungkuboid"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="416dp"
        android:layout_marginEnd="40dp"
        android:src="@drawable/count"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/lebar"
        app:layout_constraintTop_toTopOf="parent"  />

    <TextView
        android:id="@+id/hasil_kuboid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="520dp"
        android:layout_marginEnd="20dp"
        android:hint="Hasil"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:background="@drawable/border"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@id/hitungkuboid"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>
